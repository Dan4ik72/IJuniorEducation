using System;

namespace MyFirstApp
{
    class Program
    {     
        static void Main(string[] args)
        {
            int gems;
            int gemPriсe = 3;

            int gold = int.Parse(Console.ReadLine());

            Console.WriteLine($".....Магазин......\nЦена кристаллов - {gemPriсe} золота\n");

            Console.WriteLine("Сколько кристаллов вы хотите купить?");
            gems = int.Parse(Console.ReadLine());
            Console.Clear();            

            gold -= gems * gemPriсe;

            Console.WriteLine($".....Кошелек.....\nЗолото - {gold} \nКристаллы - {gems}");            
        }
    }    
}
