using System;

namespace MyFirstApp
{
    class Program
    {     
        static void Main(string[] args)
        {
            int picturesInLine = 3;
            int totalPictures = 52;

            int filledLines = totalPictures / picturesInLine;
            int leftPictures = totalPictures % picturesInLine;

            Console.WriteLine("Рядов заполено : " + filledLines);
            Console.WriteLine("Картинок не использовано: " + leftPictures);
        }
    }    
}
